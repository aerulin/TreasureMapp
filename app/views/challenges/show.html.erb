
<div class="wrapper-challenge-show d-flex flex-column justify-content-between">
  <header class="header-challenge-show">
    <div class="banner-custom">
      <img src='https://cdn.pixabay.com/photo/2017/01/18/10/43/banner-1989514_1280.png' alt=''>
      <div class="banner-back">
        <%= link_to "retour", missions_path%>
      </div>
    </div>
    <div class="box-avatar">
      <%= link_to challenge_map_path(@challenge) do %>
        <lottie-player src="https://assets7.lottiefiles.com/packages/lf20_svy4ivvy.json" speed="1" class= "loading avatar border-red" loop autoplay></lottie-player>
      <% end %>
    </div>

 <%if @challenge.mission.clues.count == @challenge.challenge_questions.where(status: true).count %>
      <div style="text-align:center">
      <p>Rendez-vous sur le lieu secret en vous aidant des indices et validez-le en appuyant sur le bouton!</p>
        <button class="mb-2 btn-mission" id="local-validation" data-challengeId=<%= @challenge.id %>>J'ai trouvé!</button>
      </div>
 <%else%>
    <div class="text-map">
      <i class="map-arrow fas fa-sort-up"></i>
      <h2>Ouvrir la map</h2>
      <p>Pour débloquer les indices, répondez aux différentes questions disponibles sur la Map!</p>
    </div>
  <% end %>
  </header>

<div class="show-box">
<ul class="list-clues">
<% @challenge.mission.clues.each_with_index do |clue, index|%>
        <% if index < @challenge.challenge_questions.where(status: true).count %>
        <li class="row-show-unlocked fade-in-right" style="display:flex;align-items: center;">
              <i class="fas fa-unlock-alt p-2"></i>
              <p class="text-clue"><%= clue.description%></p>
          </li>
        <% else %>
          <li class="row-show-locked">
              <i class="fas fa-lock p-2"></i>
              <div class="clue-text">Indice bloqué</div>
          </li>
        <% end %>
    <% end %>
</ul>
</div>

</div>
