<div class="main">

 <div class="banner-custom">
    <img src='https://cdn.pixabay.com/photo/2017/01/18/10/43/banner-1989514_1280.png' alt=''>
    <div class="banner-back">
      <%= link_to "retour", url_for(:back) %>
    </div>
  </div>
  <div class="box-avatar">
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    <lottie-player src="https://assets9.lottiefiles.com/packages/lf20_jcyhxkau.json" speed="1"  class= "avatar border-red" loop  autoplay></lottie-player>
  </div>

  <h1>Missions disponibles</h1>



  <% @missions.each do |mission|%>
    <div class="index-card">
      <%= image_tag mission.photo_url, alt: "Le Wagon" %>
      <div class="index-card-infos">
        <div class="index-card-infos-text">
          <h5><%= mission.name %></h5>
          <div>
            <p>📍 <%= mission.city %> </p>
            <p>🏋️‍♀️ <%= mission.difficulty %></p>
          </div>
        </div>
        <% if Challenge.find_by(mission: mission, user: current_user).present? %>
          <div class="btn-grey card-button">Déjà faite</div>
        <% else %>
          <div class="btn-red card-button"><%= link_to 'Découvrir', mission_path(mission)%></div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
