<div class="container">

<h1 style="color:#FC635b">TreasureMapp</h1>
  <h2>S'inscrire</h2>


  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "prÃ©nom" }%>
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "nom" }%>
      <%= f.input :nickname,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "pseudo" }%>
      <%= f.input :city,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Ville" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "nouveau-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "nouveau-password" } %>
    </div>

    <div class="form-actions">
      <div class="btn">
        <%= f.button :submit, "S'inscrire" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
